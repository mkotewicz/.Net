@model IEnumerable<NowaDB.Models.Adres>

@{
    ViewBag.Title = "Index";
}

<h2>Adresy</h2>

<p>
    @Html.ActionLink("Dodaj Nowy", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ulica)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.numerDomu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.numerMieszkania)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.miasto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.kod)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ulica)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.numerDomu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.numerMieszkania)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.miasto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.kod)
            </td>
            <td>
                @Html.ActionLink("Edytuj", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Szczegóły", "Details", new { id = item.Id }) |
                @Html.ActionLink("Usuń", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
<div>
    <a href="@Url.Action("Index","Home")">Powrót</a>
</div>
